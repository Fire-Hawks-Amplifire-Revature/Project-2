<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>phone_format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone, &quot;(\\d){10}&quot;)) &amp;&amp; NOT(REGEX( Phone, &quot;(\\d){0}&quot;))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone number invalid, must be 10 digits</errorMessage>
</ValidationRule>
